{
    "typescript.tsdk": "node_modules/typescript/lib",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "editor.tabSize": 4,
    "json.schemas": [
        {
            "fileMatch": ["/tsconfig.*.json"],
            "url": "http://json.schemastore.org/tsconfig"
        },
        {
            "fileMatch": ["/packages/mask/src/manifest.json"],
            "url": "http://json.schemastore.org/chrome-manifest"
        },
        {
            "fileMatch": ["/packages/mask/src/plugins/*/schema.json"],
            "url": "http://json-schema.org/draft-07/schema"
        },
        {
            "fileMatch": ["/packages/constants/src/*-constants.json"],
            "url": "/.vscode/schema/constants.json"
        }
    ],
    "cSpell.words": ["Reificated"],
    "files.associations": {
        "**/.env/*": "ini"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.wordWrap": "on",
        "editor.quickSuggestions": true
    },
    "i18n-ally.localesPaths": [
        "packages/dashboard/src/locales",
        "packages/mask/shared-ui/locales",
        "packages/shared/src/locales",
        "packages/shared-base/src/i18n",
        "packages/plugins/DAO/src/locales",
        "packages/plugins/Debugger/src/locales",
        "packages/plugins/example/src/locales",
        "packages/plugins/FileService/src/locales",
        "packages/plugins/Flow/src/locales",
        "packages/plugins/RSS3/src/locales",
        "packages/plugins/template/src/locales",
        "packages/plugins/Solana/src/locales",
        "packages/plugins/Wallet/src/locales",
        "packages/mask/src/plugins/MaskBox/locales",
        "packages/mask/src/plugins/NextID/locales",
        "packages/mask/src/social-network-adaptor/twitter.com/locales"
    ]
}
